{{!-- views\reset-password.hbs --}}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Смена пароля</title>
    <style>
        /* Основные стили, имитирующие дизайн */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: #ffffff; /* Белый фон, как в приложении */
            display: flex;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: 400px; /* Ограничиваем ширину на больших экранах */
            padding: 60px 24px 24px 24px;
        }

        h1 {
            font-size: 32px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 40px;
            color: #1c1c1e;
        }

        form {
            width: 100%;
        }

        input {
            width: 100%;
            padding: 16px;
            margin-bottom: 16px;
            border-radius: 12px;
            border: 1px solid #e5e5e5;
            background-color: #f2f2f7;
            font-size: 17px;
            -webkit-appearance: none; /* Убираем стандартные стили iOS */
        }
        
        input::placeholder {
            color: #8e8e93;
        }
        
        input:focus {
            outline: none;
            border-color: #007AFF;
            background-color: #fff;
        }

        button {
            width: 100%;
            padding: 16px;
            border: none;
            border-radius: 12px;
            background-color: #007AFF;
            color: white;
            font-size: 17px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s;
            margin-top: 8px;
        }
        
        button:hover {
            background-color: #0056b3;
        }
        
        button:disabled {
            background-color: #a0c7ff;
            cursor: not-allowed;
        }

        #message {
            margin-top: 20px;
            text-align: center;
            font-size: 15px;
            font-weight: 500;
        }

        .success {
            color: #34C759;
        }

        .error {
            color: #FF3B30;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Вход</h1> <!-- Изменил на "Вход", как на скрине, хотя это страница смены пароля. Можно поменять на "Смена пароля" -->
        <form id="resetForm">
            <input type="password" id="newPassword" placeholder="Новый пароль" required>
            <input type="password" id="confirmPassword" placeholder="Подтвердите пароль" required>
            <button type="submit" id="submitButton">Сохранить</button>
        </form>
        <p id="message"></p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('resetForm');
            const newPasswordInput = document.getElementById('newPassword');
            const confirmPasswordInput = document.getElementById('confirmPassword');
            const submitButton = document.getElementById('submitButton');
            const messageEl = document.getElementById('message');
            const title = document.querySelector('h1');

            const token = "{{token}}";

            if (!token) {
                title.textContent = 'Ошибка';
                messageEl.textContent = 'Токен для сброса пароля не найден в ссылке.';
                messageEl.className = 'error';
                submitButton.disabled = true;
                return;
            } else {
                title.textContent = 'Новый пароль'; // Меняем заголовок, если токен есть
            }

            form.addEventListener('submit', async (event) => {
                event.preventDefault();

                const newPassword = newPasswordInput.value;
                const confirmPassword = confirmPasswordInput.value;
                
                messageEl.textContent = '';
                messageEl.className = '';

                if (newPassword !== confirmPassword) {
                    messageEl.textContent = 'Пароли не совпадают.';
                    messageEl.className = 'error';
                    return;
                }
                if (newPassword.length < 6) {
                    messageEl.textContent = 'Пароль должен быть не менее 6 символов.';
                    messageEl.className = 'error';
                    return;
                }

                submitButton.disabled = true;
                submitButton.textContent = 'Сохранение...';

                try {
                    // Отправляем запрос на бэкенд
                    const response = await fetch('https://neo-osi-backend.onrender.com/auth/reset-password', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            token: token,
                            password: newPassword,
                        }),
                    });

                    const data = await response.json();

                    if (!response.ok) {
                        throw new Error(data.message || 'Произошла неизвестная ошибка.');
                    }
                    
                    title.textContent = 'Успешно!';
                    messageEl.textContent = data.message;
                    messageEl.className = 'success';
                    form.style.display = 'none'; // Скрываем форму после успеха

                } catch (error) {
                    messageEl.textContent = error.message;
                    messageEl.className = 'error';
                    submitButton.disabled = false;
                    submitButton.textContent = 'Сохранить';
                }
            });
        });
    </script>
</body>
</html>